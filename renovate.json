{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "includePaths": ["package.json"],
  "nodenv": {
    "enabled": false
  },
  "nvm": {
    "enabled": false
  },
  "baseBranches": ["main"],
  "lockFileMaintenance": {
    "schedule": ["before 7am on monday"],
    "enabled": true
  },
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": ["^yarn"],
  "ignoreDeps": ["typescript", "zone.js"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "lockFileMaintenance", "bump"],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "squash"
    },

    {
      "matchPackageNames": ["@types/node", "jasmine-core"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "esta",
      "matchPackagePrefixes": ["@sbb-esta/"],
      "prPriority": 10,
      "automerge": false
    },
    {
      "groupName": "angular",
      "matchPackagePrefixes": ["@angular/", "@angular-devkit/", "@schematics/angular", "typescript"]
    },
    {
      "groupName": "karma",
      "matchPackagePrefixes": ["karma"]
    },
    {
      "groupName": "jasmine",
      "matchPackagePrefixes": ["jasmine", "@types/jasmine"]
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": ["typescript-eslint", "eslint", "angular-eslint"]
    },
    {
      "groupName": "commitlint",
      "matchPackagePrefixes": ["@commitlint/"]
    },
    {
      "matchPackageNames": ["@angular/cli", "@angular/cdk", "angular-server-side-configuration"],
      "postUpgradeTasks": {
        "commands": [
          "yarn install --ignore-scripts --frozen-lockfile --non-interactive",
          "yarn ng update {{{depName}}} --from={{{currentVersion}}} --to={{{newVersion}}} --migrate-only --allow-dirty --force",
          "yarn format"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}
